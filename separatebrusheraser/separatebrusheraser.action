<?xml version="1.0" encoding="UTF-8"?>
<ActionCollection version="2" name="Scripts">
    <Actions category="Scripts">
        <text>Separate Brush and Eraser</text>

        <Action name="dninosores_activate_brush">
            <icon></icon>
            <text>Switch to Freehand Brush</text>
            <whatsThis>Switches to freehand brush tool as if separate from eraser.</whatsThis>
            <toolTip>Switches to freehand brush tool as if separate from eraser.</toolTip>
            <iconText></iconText>
            <isCheckable>false</isCheckable>
            <statusTip></statusTip>
        </Action>

        <Action name="dninosores_activate_eraser">
            <icon></icon>
            <text>Switch to Freehand Eraser</text>
            <whatsThis>Switches to freehand brush tool with eraser active as if separate tool.</whatsThis>
            <toolTip>Switches to freehand brush tool with eraser active as if separate tool.</toolTip>
            <iconText></iconText>
            <isCheckable>false</isCheckable>
            <statusTip></statusTip>
        </Action>

        <Action name="dninosores_eraser_on">
            <icon></icon>
            <text>Activate Eraser</text>
            <whatsThis>Activates eraser mode without switching tools</whatsThis>
            <toolTip>Activates eraser mode without switching tools</toolTip>
            <iconText></iconText>
            <isCheckable>false</isCheckable>
            <statusTip></statusTip>
        </Action>

        <Action name="dninosores_eraser_off">
            <icon></icon>
            <text>Activate Brush</text>
            <whatsThis>Activates brush mode without switching tools</whatsThis>
            <toolTip>Activates brush mode without switching tools</toolTip>
            <iconText></iconText>
            <isCheckable>false</isCheckable>
            <statusTip></statusTip>
        </Action>

        <Action name="dninosores_eraser_toggle">
            <icon></icon>
            <text>Toggle Eraser</text>
            <whatsThis>Toggles eraser without switching tool or brush preset (default Krita
                behavior)</whatsThis>
            <toolTip>Toggles eraser without switching tool or brush preset (default Krita behavior)</toolTip>
            <iconText></iconText>
            <isCheckable>false</isCheckable>
            <statusTip></statusTip>
        </Action>
    </Actions>
</ActionCollection>